<!-- app/views/sessions/new.html.erb -->

<h1>Login</h1>

  <% if flash[:notice] %>
    <div>
      <%= flash[:notice] %>
    </div>
  <% end %>

<%= form_tag '/login' do %>
  Email: <%= email_field_tag :email%>
  Password: <%= password_field_tag :password%>
  <%= submit_tag "Submit", class: 'btn btn-primary'%>

<% end %>