<% product = Product.find_by(id: line_item.product_id) %>
<tr>
  <td>
    <%= image_tag product.image.tiny %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
    <%= number_to_currency(product.price) %>
  </td>
  <td>
    <%= line_item.quantity %>
  </td>
  <td>
    <%= number_to_currency((line_item.total_price_cents.to_f)/100) %>
  </td>
</tr>